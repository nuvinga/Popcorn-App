<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataEditorActivity">

    <TextView
        android:id="@+id/editor_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Update Movie Info"
        android:textColor="#64DD17"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".05" />

    <TextView
        android:id="@+id/textView2_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="#388E3C"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView3_editor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editor_title"
        app:layout_constraintVertical_bias="0.571" />

    <EditText
        android:id="@+id/title_input_editor"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Movie Title"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2_editor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toEndOf="@+id/textView2_editor"
        app:layout_constraintTop_toTopOf="@+id/textView2_editor"
        app:layout_constraintVertical_bias="0.476" />

    <TextView
        android:id="@+id/textView3_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year"
        android:textColor="#388E3C"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView4_editor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editor_title"
        app:layout_constraintVertical_bias="0.721" />

    <EditText
        android:id="@+id/production_input_editor"
        android:layout_width="224dp"
        android:layout_height="38dp"
        android:ems="10"
        android:hint="Production Year"
        android:inputType="number"
        android:maxLength="4"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3_editor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.317"
        app:layout_constraintStart_toEndOf="@+id/textView3_editor"
        app:layout_constraintTop_toTopOf="@+id/textView3_editor"
        app:layout_constraintVertical_bias="0.473" />

    <TextView
        android:id="@+id/textView4_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Director"
        android:textColor="#388E3C"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView5_editor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editor_title"
        app:layout_constraintVertical_bias="0.817" />

    <EditText
        android:id="@+id/director_input_editor"
        android:layout_width="224dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Directors Name"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4_editor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toEndOf="@+id/textView4_editor"
        app:layout_constraintTop_toTopOf="@+id/textView4_editor"
        app:layout_constraintVertical_bias="0.476" />

    <TextView
        android:id="@+id/textView5_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cast"
        android:textColor="#388E3C"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editor_title"
        app:layout_constraintVertical_bias="0.35000002" />

    <EditText
        android:id="@+id/cast_input_editor"
        android:layout_width="224dp"
        android:layout_height="39dp"
        android:bufferType="spannable"
        android:ems="10"
        android:hint="Cast seperated by commas (,)"
        android:inputType="textLongMessage|textMultiLine|textPersonName|textImeMultiLine|textCapWords"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5_editor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toEndOf="@+id/textView5_editor"
        app:layout_constraintTop_toTopOf="@+id/textView5_editor"
        app:layout_constraintVertical_bias="0.50" />

    <TextView
        android:id="@+id/textView7_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review"
        android:textColor="#388E3C"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editor_title"
        app:layout_constraintVertical_bias="0.53" />

    <EditText
        android:id="@+id/review_input_editor"
        android:layout_width="222dp"
        android:layout_height="39dp"
        android:ems="10"
        android:hint="Movie Review"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView7_editor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toEndOf="@+id/textView7_editor"
        app:layout_constraintTop_toTopOf="@+id/textView7_editor"
        app:layout_constraintVertical_bias="0.45" />

    <Button
        android:id="@+id/save_button_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveUpdates"
        android:text="Update Movie Data"
        app:backgroundTint="@color/teal_200"
        app:icon="@android:drawable/ic_menu_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7_editor"
        app:layout_constraintVertical_bias="0.776" />

    <TextView
        android:id="@+id/error_text_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Oops! Please recheck your inputs. \nUse the guide buttons"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toTopOf="@+id/save_button_editor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7_editor"
        app:layout_constraintVertical_bias="0.80" />

    <Button
        android:id="@+id/title_error_button_editor"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="@android:color/holo_red_dark"
        app:icon="@android:drawable/ic_dialog_info"
        app:iconPadding="0dp"
        app:iconTint="#FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/title_input_editor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_input_editor"
        app:layout_constraintTop_toTopOf="@+id/title_input_editor"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/year_error_button_editor"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="@android:color/holo_red_dark"
        app:icon="@android:drawable/ic_dialog_info"
        app:iconPadding="0dp"
        app:iconTint="#FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/production_input_editor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/production_input_editor"
        app:layout_constraintTop_toTopOf="@+id/production_input_editor" />

    <Button
        android:id="@+id/director_error_button_editor"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="@android:color/holo_red_dark"
        app:icon="@android:drawable/ic_dialog_info"
        app:iconPadding="0dp"
        app:iconTint="#FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/director_input_editor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/director_input_editor"
        app:layout_constraintTop_toTopOf="@+id/director_input_editor" />

    <Button
        android:id="@+id/cast_error_button_editor"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="@android:color/holo_red_dark"
        app:icon="@android:drawable/ic_dialog_info"
        app:iconPadding="0dp"
        app:iconTint="#FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/cast_input_editor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cast_input_editor"
        app:layout_constraintTop_toTopOf="@+id/cast_input_editor" />

    <Button
        android:id="@+id/review_error_button_editor"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="58dp"
        android:layout_height="40dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:backgroundTint="@android:color/holo_red_dark"
        app:icon="@android:drawable/ic_dialog_info"
        app:iconPadding="0dp"
        app:iconTint="#FF0000"
        app:layout_constraintBottom_toBottomOf="@+id/review_input_editor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/review_input_editor"
        app:layout_constraintTop_toTopOf="@+id/review_input_editor" />

    <RatingBar
        android:id="@+id/ratingBar_editor"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="361dp"
        android:layout_height="34dp"
        android:isIndicator="false"
        android:numStars="10"
        android:stepSize="1.0"
        android:theme="@style/RatingBar"
        app:layout_constraintBottom_toTopOf="@+id/review_input_editor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cast_input_editor"
        app:layout_constraintVertical_bias="0.50" />

    <CheckBox
        android:id="@+id/checkedTextView_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:clickable="true"
        android:focusable="true"
        android:text="Favourite"
        android:textColor="#388E3C"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/error_text_editor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_input_editor" />

</androidx.constraintlayout.widget.ConstraintLayout>